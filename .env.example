# Example environment variables file
# Copy this to .env and update with your credentials

# Option 1: Using DATABASE_URL (common in cloud environments)
# DATABASE_URL=postgresql://username:password@localhost:5432/mydb

# Option 2: Using individual PostgreSQL environment variables
PGHOST=localhost
PGPORT=5432
PGDATABASE=postgres
PGUSER=postgres
PGPASSWORD=yourpassword
PGSSLMODE=prefer

# Additional database credentials for multiple connections
DB_USER=postgres
DB_PASS=yourpassword

PROD_DB_USER=prod_user
PROD_DB_PASS=prod_password

STAGING_DB_USER=staging_user
STAGING_DB_PASS=staging_password